@model PasteBin.Models.Paste

@{
    ViewData["Title"] = "Create paste";
}

<form asp-controller="Pastes" asp-action="Create" method="POST">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Title" class="control-label">Paste Title</label>
        <input asp-for="Title" class="form-control" rows="8" />
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Content" class="control-label">Paste Content</label>
        <textarea asp-for="Content" class="form-control" rows="8"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Language" class="control-label">Language</label>
        <select class="form-control" asp-for="LanguageId" asp-items="@(new SelectList(ViewBag.Languages, "Id", "Name"))">
            <option value="0">Please Select..</option>
        </select>
        <span asp-validation-for="LanguageId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
</form>
